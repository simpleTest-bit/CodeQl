<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MSFT PMO ServiceXchange</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&amp;family=Noto+Sans&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <a href="#" class="navbar-brand text-lg fw-bold">MSFT PMO ServiceXchange</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link active">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link active dropdown-toggle" data-bs-toggle="dropdown">Requests</a>
                        <div class="dropdown-menu">
                            <a href="/Home/SR_Request" class="dropdown-item">SR Request</a>
                            <a href="/Laptop/LaptopRequest" class="dropdown-item">Laptop Request</a>
                            <a href="#" class="dropdown-item">RAS Assignation</a>
                            <a href="/Onboarding/UploadOnboardingData" class="dropdown-item">Onboarding Request</a>
                        </div>
                    </li>
                    @if (Session["UserRole"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" href="/Admin/AdminDashboard">Dashboard</a>
                        </li>
                    }
                </ul>
                <ul class="nav navbar-nav ms-auto">
                    @if (Session["UserRole"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                <img src="https://t3.ftcdn.net/jpg/03/46/83/96/360_F_346839683_6nAPzbhpSkIpb8pmAwufkC7c5eD7wYws.jpg" width="40" height="40" class="rounded-circle">
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <p class="dropdown-item text-lg-start fw-bold">Hi, @Session["UserName"]</p>
                                <a href="/Admin/AdminDashboard" class="dropdown-item">Dashboard</a>
                                <div class="dropdown-divider"></div>
                                @if (Session["UserRole"].ToString() == "admin")
                                {
                                    <a href="/Admin/CreateUser" class="dropdown-item">Create user</a>
                                    <a href="/Admin/ListUsers" class="dropdown-item">List Users</a>
                                    <div class="dropdown-divider"></div>
                                }
                                <a href="/Admin/ResetPassword" class="dropdown-item">Reset Password</a>
                                <a href="/Admin/LogOut" class="text-danger dropdown-item">Logout</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <div class="container body-content">
        <hr />
        <footer id="footer">
            <p>&copy; @DateTime.Now.Year - HCL Technologies Ltd. | <a style="color: white;" href="/Admin/AdminLogin">Login</a></p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
